configuration {
    display-drun: "";
    drun-display-format: "{icon} {name}";
    modi: "drun";
    show-icons: true;
    location: 0;
}

@theme "~/.cache/wal/colors-rofi-dark.rasi"

* {
    font: "JetBrainsMonoNL Nerd Font 18";
}

window {
    width: 61%;
    height: 40%;
    location: center; 
    padding: 10px;
}

mainbox {
    orientation: horizontal;
    children: [ "leftbox", "listview" ];
}

leftbox {
    orientation: vertical;
    children: [ "inputbar", "imagebox" ];
}

inputbar {
    padding: 0px;
    spacing: 20px;
    children: [ "prompt", "entry" ];
}

imagebox {
    background-image: url("image.jpg");
}

prompt {
    padding: 10px;
    placeholder: "î©­";
}

entry, element-text {
    text-color: @foreground;
    vertical-align: 0.5;
}

element-icon {
    size: 1.5em;
}
